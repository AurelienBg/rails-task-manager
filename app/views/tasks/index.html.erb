<h1>Tasks list</h1>
<div>
  <% @tasks.each do |t| %>
    <h3><%= t.name %> (id: <%= t.id %>)</h3>
    <p>priority: <%= t.priority %> </p>
    <%= link_to "view", task_path(t) %>
    <%= link_to "delete", task_path(t), method: :delete, data: { confirm: "Are you sure?" }
    %>
  <% end %>
</div>
</br>
<div ><%= link_to "Add a new task", new_task_path %></div>
